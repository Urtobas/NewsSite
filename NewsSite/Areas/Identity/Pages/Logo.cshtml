@page
@model NewsSite.Areas.Identity.Pages.LogoModel
@{
    Layout = "/Areas/Identity/Pages/Shared/_Layout.cshtml";
}
<h1 class="header-1 admin-header-color">Установка логотипа сайта</h1>
 <img src="~/images/logo.png" class="" width="400"/>
 <div class="header-3">Рекомендуемая высота логотипа 65px. Изображение большего размера будет уменьшено до указанного значения</div>
<form method="post" enctype="multipart/form-data">
    <div class="form-floating">
        <input type="file" class="form-control bg-transparent" name="logo" />
        
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-outline-secondary form-control" type="submit"> Сохранить</button>
    </div>
</form> 