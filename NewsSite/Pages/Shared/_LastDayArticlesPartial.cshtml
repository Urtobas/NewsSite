@{
}
<div class="row">
    <h2 class="header-2">Новости за 24 часа</h2>
    <div class="container-fluid">
        <div class="row">
            @foreach (var elem in IndexModel.LastDayArticles)
            {
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@elem.PathToMainPhoto" class="img-fluid rounded-start" alt="@elem.ArticleTitle">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h3 class="card-title header-3"> <a class="text-decoration-none header-3" asp-page="ArticlePage" asp-route-id="@elem.Id">@elem.ArticleTitle</a></h3>
                                    <p class="card-text"><small class="text-muted">Опубликовано в @elem.PublicationDate.ToString("HH:mm")</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<hr/>