@using Microsoft.AspNetCore.Identity
@using NewsSite.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="btn btn-menu-item" asp-area="Identity" asp-page="AdminDashboard">Панель администратора</a>
        </li>
    </ul>
}
@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link admin-font-color " asp-area="Identity" asp-page="/AdminDashboard" title="Manage">Вы вошли как @User.Identity?.Name</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button type="submit" class="btn btn-link nav-link admin-font-color  btn-sm">Выйти</button>
    </form>
}
else
{
    <a class="nav-link admin-font-color " asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link admin-font-color " asp-area="Identity" asp-page="/Account/Login">Login</a>
}

